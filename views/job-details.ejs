<%- include('./partials/head') %>
<%- include('./partials/nav') %>

<div class="container-fluid mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1 class="card-title mb-4"><%= job.companyName %></h1>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <p><i class="fas fa-calendar-alt text-primary"></i> <strong>Date Applied:</strong> <%= job.dateApplied.toLocaleDateString() %></p>
                            <p><i class="fas fa-briefcase text-primary"></i> <strong>Experience Required:</strong> <%= job.experienceRequired %> years</p>
                        </div>
                        <div class="col-md-6">
                            <p><i class="fas fa-check-circle text-primary"></i> <strong>Status:</strong> <span class="badge bg-<%= job.status === 'Pending' ? 'warning' : (job.status === 'In Process' ? 'info' : 'danger') %>"><%= job.status %></span></p>
                            <form action="/jobs/updateStatus/<%= job._id %>" method="POST" class="mt-3">
                                <div class="input-group">
                                    <select class="form-select" id="status" name="status">
                                        <option value="Pending" <%= job.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                                        <option value="In Process" <%= job.status === 'In Process' ? 'selected' : '' %>>In Process</option>
                                        <option value="Rejected" <%= job.status === 'Rejected' ? 'selected' : '' %>>Rejected</option>
                                    </select>
                                    <button type="submit" class="btn btn-primary">Update Status</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <h3 class="mt-4 mb-3"><i class="fas fa-file-alt text-primary"></i> Job Description:</h3>
                    <p class="lead"><%= job.jobDescription %></p>

                    <h3 class="mt-4 mb-3"><i class="fas fa-laptop-code text-primary"></i> Technologies:</h3>
                    <div class="mb-4">
                        <% job.technologies.forEach(tech => { %>
                            <span class="badge bg-light text-dark me-2 mb-2"><%= tech %></span>
                        <% }) %>
                    </div>

                    <h3 class="mt-4 mb-3"><i class="fas fa-comments text-primary"></i> Comments:</h3>
                    <% if (job.comments && job.comments.length > 0) { %>
                        <ul class="list-group list-group-flush mb-4">
                            <% job.comments.forEach(comment => { %>
                                <li class="list-group-item">
                                    <p class="mb-1"><%= comment.content %></p>
                                    <small class="text-muted">Posted on: <%= comment.createdAt.toLocaleDateString() %></small>
                                </li>
                            <% }) %>
                        </ul>
                    <% } else { %>
                        <p class="text-muted">No comments yet.</p>
                    <% } %>

                    <form action="/jobs/comment/<%= job._id %>" method="POST" class="mt-4">
                        <div class="mb-3">
                            <label for="comment" class="form-label">Add a comment:</label>
                            <textarea class="form-control" id="comment" name="content" rows="3" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Add Comment</button>
                    </form>
                </div>
            </div>

            <a href="/jobs" class="btn btn-secondary mt-3">Back to Jobs</a>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    var quills = document.querySelectorAll('.rich-text-editor');
    quills.forEach(function(quillElement) {
      var quill = new Quill(quillElement, {
        theme: 'snow',
        modules: {
          toolbar: [
            ['bold', 'italic', 'underline', 'strike'],
            ['blockquote', 'code-block'],
            [{ 'header': 1 }, { 'header': 2 }],
            [{ 'list': 'ordered'}, { 'list': 'bullet' }],
            [{ 'script': 'sub'}, { 'script': 'super' }],
            [{ 'indent': '-1'}, { 'indent': '+1' }],
            [{ 'direction': 'rtl' }],
            [{ 'size': ['small', false, 'large', 'huge'] }],
            [{ 'header': [1, 2, 3, 4, 5, 6, false] }],
            [{ 'color': [] }, { 'background': [] }],
            [{ 'font': [] }],
            [{ 'align': [] }],
            ['clean']
          ]
        }
      });

      var form = quillElement.closest('form');
      if (form) {
        form.onsubmit = function() {
          var input = document.createElement('input');
          input.setAttribute('type', 'hidden');
          input.setAttribute('name', quillElement.getAttribute('data-input-name'));
          input.value = quill.root.innerHTML;
          form.appendChild(input);
        };
      }
    });
  });
</script>